@using EPlast.DataAccess.Entities
@model EPlast.DataAccess.Entities.Decesion
@{
    ViewData["Title"] = "Raport";
}
<div class="contact-clean">
    <form method="post" asp-action="SaveReport" asp-controller="Report">
        <h2 class="text-center">Додати рішення пластового проводу<br></h2>
        <div class="form-group">
            <label>
                <strong>Назва рішення</strong>
                <br>
            </label>
            @Html.TextBoxFor(x => x.Name, new { @placeholder = "Назва рішення", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>
                <strong>Рішення органу</strong>
                <br>
            </label>
            @Html.DropDownListFor(x => x.Organization.ID, (IEnumerable<SelectListItem>)ViewBag.Organization, "Виберіть орган влади рішення"
            , new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>
                <strong>Тематика рішення</strong>
                <br>
            </label>
            @Html.TextBoxFor(x => x.DecesionTarget.TargetName,
            new { @placeholder = "Тематика рішення", @list = "DecisionType-value", @class = "form-control", @Value = "" })
            <datalist id="DecisionType-value">
                @foreach (DecesionTarget item in ViewBag.DecesionTargets)
                {
                    <option>@item.TargetName</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            <label>
                <strong>Дата рішення</strong>
                <br>
            </label>
            <br>
            @Html.TextBoxFor(x => x.Date,
            new { type = "datetime", @placeholder = "Назва рішення", @id = "datepicker", @class = "form-control" })
        </div>
        <label>
            <strong>Текст рішення</strong>
            <br>
        </label>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Description, new { @placeholder = "Опис", @rows = "14", @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary" id="sbmt" type="submit">Опублікувати</button>
        </div>
    </form>
</div>