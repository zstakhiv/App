@using EPlast.DataAccess.Repositories;
@using EPlast.ViewModels;
@model DecesionViewModel
@inject IRepositoryWrapper _repoWrapper
@{
    ViewData["Title"] = "Raport";
}
<div class="create-raport-form">
    <form method="post" asp-action="SaveReport" asp-controller="Report">
        <h2 class="text-center">Додати рішення пластового проводу<br></h2>
        <div class="form-group">
            <label>
                <strong>Назва рішення</strong>
                <br>
            </label>
            @Html.TextBoxFor(x => x.Decesion.Name, new { @placeholder = "Назва рішення", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>
                <strong>Рішення органу</strong>
                <br>
            </label>
            @Html.DropDownListFor(x => x.Decesion.Organization.ID,
            (IEnumerable<SelectListItem>
                )(from item in _repoWrapper.Organization.FindAll()
                  select new SelectListItem
                  {
                      Text = item.OrganizationName,
                      Value = item.ID.ToString()
                  }), "Виберіть орган влади рішення"
                , new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>
                <strong>Тематика рішення</strong>
                <br>
            </label>
            @Html.TextBoxFor(x => x.Decesion.DecesionTarget.TargetName,
            new { @id = "autocomplete_input", @placeholder = "Тематика рішення", @list = "DecisionType-value", @class = "form-control", @Value = "" })
            <datalist id="DecisionType-value">
                @foreach (var item in _repoWrapper.DecesionTarget.FindAll().ToList())
                {
                    <option data-value="@item.ID" value="@item.TargetName"></option>
                }
            </datalist>
            @Html.HiddenFor(x => x.Decesion.DecesionTarget.ID, new { @id = "autocomplete_input_id_0" })
        </div>
        <div class="form-group">
            <label>
                <strong>Дата рішення</strong>
                <br>
            </label>
            <br>
            @Html.TextBoxFor(x => x.Decesion.Date,
            new { type = "datetime", @placeholder = "Назва рішення", @id = "datepicker", @class = "form-control" })
        </div>
        <label>
            <strong>Текст рішення</strong>
            <br>
        </label>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Decesion.Description, new { @placeholder = "Опис", @rows = "14", @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary" id="sbmt" type="submit">Опублікувати</button>
        </div>
    </form>
</div>