@using EPlast.ViewModels
@model List<DecesionViewModel>
@{
    ViewData["Title"] = "ReadRaport";
}
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                ID
            </th>
            <th class="th-sm">
                Керівний орган
            </th>

            <th class="th-sm">
                Статус
            </th>
            <th class="th-sm">
                Рішення для
            </th>
            <th class="th-sm">
                Рішення
            </th>
            <th class="th-sm">
                Дата
            </th>
            <th class="th-sm">
                Додатки
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Decesion.ID</td>
                <td>@item.Decesion.Organization.OrganizationName</td>
                <td>@item.Decesion.DecesionStatus.DecesionStatusName</td>
                <td>@item.Decesion.DecesionTarget.TargetName</td>
                <td>@item.Decesion.Description</td>
                <td>@item.Decesion.Date.ToString("dd-MM-yyyy")</td>
                <td>must be desision file</td>
            </tr>
        }
    </tbody>
</table>