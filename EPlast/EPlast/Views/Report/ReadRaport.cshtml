@using EPlast.DataAccess.Entities
@model List<Decesion>
@{
    ViewData["Title"] = "ReadRaport";
}
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                ID
            </th>
            <th class="th-sm">
                Керівний орган
            </th>
            <th class="th-sm">
                Номер рішення
            </th>
            <th class="th-sm">
                Статус
            </th>
            <th class="th-sm">
                Рішення для
            </th>
            <th class="th-sm">
                Рішення
            </th>
            <th class="th-sm">
                Дата
            </th>
            <th class="th-sm">
                Додатки
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Organization.OrganizationName</td>
                <td>Here must be desisuion numner</td>
                <td>@item.DecesionStatus.DecesionStatusName</td>
                <td>@item.DecesionTarget.TargetName</td>
                <td>@item.Description</td>
                <td>@item.Date</td>
                <td>must be desision file</td>
            </tr>
        }
    </tbody>
</table>