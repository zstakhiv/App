@using EPlast.DataAccess.Repositories;
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Event User Page";
}
@model EPlast.ViewModels.Events.EventUserViewModel;
@inject IRepositoryWrapper  _repository;
@inject UserManager<EPlast.DataAccess.Entities.User> _userManager;

<div class=" eventUserPage d-md-flex d-xl-flex justify-content-md-center justify-content-xl-center align-items-xl-top container">
    <div class="container bg-light m-5 pt-2 pb-5 pr-5 pl-5 user-profile">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link " asp-action="UserProfile" asp-controller="Account">Персональні дані</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#">Дійсне членство</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#positions">Діловодства</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="EventUser" asp-controller="EventUser">Події</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#">З'їзди</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#">Бланки</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#">Поручення</a>
            </li>
            @if (_userManager.GetUserId(User) == Model.User.Id)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Edit" asp-route-id="@Model.User.Id">Редагувати профіль</a>
                </li>
            }
        </ul>
        <div class="tab-content">
            <div class="d-sm-flex justify-content-sm-center row">
                <div class="d-flex justify-content-center col-sm">
                    <div class="d-lg-flex align-items-center justify-content-lg-center border shadow events" id="eventPersonalInfo">
                        <div class="text-center justify-content-center box">
                            <img class="img-fluid border rounded-circle" src="/images/Users/@Model.User.ImagePath" style="margin-top: 10px; width: 200px;height :200px;">
                            <h4 style="margin-top: 32px;">@Model.User.FirstName @Model.User.LastName</h4>
                            <p>Пластун прихильник</p>
                            <div class="d-lg-flex spliter" id="infoSplit" style="width: 256px;margin-top: 0px;"></div>
                            <p> </p>
                            <a class="btn btn-primary btn-lg" role="button" asp-action="EventCreate" asp-controller="EventUser">Створити подію</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm big">
                    <div class="d-flex d-sm-flex justify-content-center justify-content-sm-center row" id="detailes">
                        <div class="col-sm small">
                            <div id="permitedEvents" class="border shadow events">
                                <div class="text-center justify-content-center box">
                                    <h4 style="margin-top: 10px;margin-bottom: 26px;"><br>Відвідані події<br></h4>
                                    <div class="d-lg-flex spliter" id="infoSplit" style="width: 262px;"></div>
                                    <h3 style="margin: 0px;margin-bottom: -6px;margin-top: 6px;">0</h3>
                                    <p style="margin-bottom: 2px;">Події</p><a class="btn btn-primary btn-lg" role="button" data-toggle="modal" href="#myModal">Деталі</a>
                                    <div class="modal fade" role="dialog" tabindex="-1" id="myModal-1">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4>Відвідані події:</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <ul>
                                                        @foreach (var item in Model.VisitedEvents)
                                                        {
                                                            <li>
                                                                @item.EventName, @item.Eventlocation, Дата початку: @item.EventDateStart Дата кінця: @item.EventDateEnd
                                                                <a class="btn btn-primary btn-lg" role="button"
                                                                   asp-controller="Action" asp-action="EventInfo" asp-route-ID=@item.ID>Деталі</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-light" data-dismiss="modal" type="button">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm small">
                            <div id="notPermitedEvents" class="border shadow events">
                                <div class="text-center justify-content-center box">
                                    <h4 style="margin-top: 0px;"><br>Створені<br>події<br></h4>
                                    <div class="d-lg-flex spliter" id="infoSplit" style="width: 262px;"></div>
                                    <h3 style="margin: 0px;margin-bottom: -6px;margin-top: 6px;">@Model.CreatedEventCount</h3>
                                    <p style="margin-bottom: 2px;">Події</p><a class="btn btn-primary btn-lg" role="button" data-toggle="modal" href="#myModal">Деталі</a>
                                    <div class="modal fade" role="dialog" tabindex="-1" id="myModal">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4>Створені події</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                                </div>
                                                <div class="modal-body">
                                                    <ul class="text-left">
                                                        @foreach (var item in Model.CreatedEvents)
                                                        {
                                                            <li>
                                                                @item.EventName, @item.Eventlocation, <br>Дата початку: @item.EventDateStart Дата кінця: @item.EventDateEnd
                                                                <a class="btn btn-primary btn-lg" role="button" asp-controller="Action" asp-action="EventInfo" asp-route-ID=@item.ID>Деталі</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                                <div class="modal-footer"><button class="btn btn-light" data-dismiss="modal" type="button">Закрити</button></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-sm-flex justify-content-sm-center row">
                        <div id="planedEvents" class="border shadow events">
                            <div class="text-center box">
                                <h4 style="margin-top: 0px;margin-bottom: 9px;"><br>Заплановані події<br></h4>
                                <div class="d-lg-flex bigSpliter" id="infoSplit"></div>
                                <h3 style="margin: 0px;margin-bottom: -6px;margin-top: 6px;">0</h3>
                                <p style="margin-bottom: 2px;">Події</p><a class="btn btn-primary btn-lg" role="button" data-toggle="modal" href="#myModal">Деталі</a>
                                <div class="modal fade" role="dialog" tabindex="-1" id="myModal-3">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4>Заплановані події:</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                            </div>
                                            <div class="modal-body">
                                                <ul class="text-left">
                                                    @foreach (var item in Model.PlanedEvents)
                                                    {
                                                        <li>@item.EventName, @item.Eventlocation, Дата початку: @item.EventDateStart Дата кінця: @item.EventDateEnd </li>
                                                    }
                                                </ul>
                                            </div>
                                            <div class="modal-footer"><button class="btn btn-light" data-dismiss="modal" type="button">Close</button></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


