@using EPlast.DataAccess.Repositories
@using EPlast.DataAccess.Entities
@{
    ViewData["Title"] = "Event Create Page";
}
@model EPlast.ViewModels.Events.EventCreateViewModel;
@Html.HiddenFor(model => model.Event.ID)
@Html.HiddenFor(model => model.EventAdmin.EventID)
@Html.HiddenFor(model=>model.User.Events)
<form asp-action="EventCreate" enctype="multipart/form-data">
    <div class="eventCreate">
        <div class="d-xl-flex justify-content-xl-center border shadow card">
            <div class="col " style="height: 1000px;">
                <div class="row">
                    <div class="col">
                        <div class="text-center d-xl-flex justify-content-xl-center align-items-xl-center">
                            <h1 class="text-center">Нова подія</h1>
                        </div>
                    </div>
                </div>
                <div class="row border shadow" style="height: 55px;">
                    <div class="col d-flex d-xl-flex justify-content-xl-center align-items-xl-center" id="Vyshkil">
                        <button class="btn btn-primary typebutton" type="button">Вишкіл</button>
                    </div>
                    <div class="col d-flex d-xl-flex justify-content-xl-center align-items-xl-center" id="Tabir">
                        <button class="btn btn-primary typebutton" type="button">Табір</button>
                    </div>
                    <div class="col d-flex d-xl-flex justify-content-xl-center align-items-xl-center" id="Akcia">
                        <button class="btn btn-primary typebutton" type="button">Акція</button>
                    </div>
                    @Html.HiddenFor(i => i.Event.EventType.EventTypeName, new { @id = "name" })
                    @Html.HiddenFor(i => i.Event.EventTypeID, new { @id = "autocomplete_input_id_0" })
                    @Html.HiddenFor(i => i.Event.EventStatus.EventStatusName, new { @id = "status" })
                    @Html.HiddenFor(i => i.Event.EventStatusID, new { @id = "autocomplete_input_id_1" })
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label" id="type">Катергорія</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        @Html.TextBoxFor(x => x.Event.EventCategory.EventCategoryName,
                        new
                             {
                                 @list = "EventCategory-value",
                                 @id = "autocomplete_input",
                                 @class = "border textBoxInput",
                                 @Value = ""
                             })
                        <datalist id="Eventcategory-value">
                            @foreach (EventCategory item in Model.EventCategory)
                            {
                                <option data-value="@item.ID" value="@item.EventCategoryName"></option>
                            }
                        </datalist>
                        @Html.HiddenFor(i => i.Event.EventCategory.ID, new { @id = "autocomplete_input_id_2" })
                        <span asp-validation-for="Event.EventCategory.EventCategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Назва події</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.EventName" type="text" class="border TextIinput infoInput">
                    </div>
                </div>

                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Комендант</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        @Html.TextBoxFor(x => x.EventAdmin.User,
                        new
                             {
                                 @list = "Users-value",
                                 @id = "autocomplete_input",
                                 @class = "border textBoxInput",
                                 @Value = ""
                             })
                        <datalist id="Users-value">
                            @foreach (User item in Model.Users)
                            {
                                <option data-value="@item.Id" value="@item.FirstName @item.LastName"></option>
                            }
                        </datalist>
                        @Html.HiddenFor(i => i.EventAdmin.UserID, new { @id = "autocomplete_input_id_3" })
                        @Html.HiddenFor(i => i.EventAdmin.EventID, new { @id = "autocomplete_input_id_4" })
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Заступник коменданта</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        @Html.TextBoxFor(x => x.EventAdministration.User,
                        new
                            {
                                 @list = "Administration-value",
                                 @id = "autocomplete_input",
                                 @class = "border textBoxInput",
                                 @Value = ""
                             })
                        <datalist id="Administration-value">
                            @foreach (User item in Model.Users)
                            {
                                <option data-value="@item.Id" value="@item.FirstName @item.LastName"></option>
                            }
                        </datalist>
                        @Html.HiddenFor(i => i.EventAdministration.User.Id, new { @id = "autocomplete_input_id_5" })
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Бунчужний/на</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        @Html.TextBoxFor(x => x.EventAdministration.User,
                        new
                            {
                                 @list = "Administration-value",
                                 @id = "autocomplete_input",
                                 @class = "border textBoxInput",
                                 @Value = ""
                             })
                        <datalist id="Administration-value">
                            @foreach (User item in Model.Users)
                            {
                                <option data-value="@item.Id" value="@item.FirstName @item.LastName"></option>
                            }
                        </datalist>
                        @Html.HiddenFor(i => i.EventAdministration.User.Id, new { @id = "autocomplete_input_id_6" })
                        @Html.HiddenFor(i => i.EventAdministration.Event.ID, new { @id = "autocomplete_input_id_7" })

                        @Html.HiddenFor(i => i.EventAdministration.AdministrationType, new { @id = "bunchuznuy" })
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Писар</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        @Html.TextBoxFor(x => x.EventAdministration.User,
                        new
                            {
                                 @list = "Administration-value",
                                 @id = "autocomplete_input",
                                 @class = "border textBoxInput",
                                 @Value = ""
                             })
                        <datalist id="Administration-value">
                            @foreach (User item in Model.Users)
                            {
                                <option data-value="@item.Id" value="@item.FirstName @item.LastName"></option>
                            }
                        </datalist>
                        @Html.HiddenFor(i => i.EventAdministration.User.Id, new { @id = "autocomplete_input_id_8" })
                        @Html.HiddenFor(i => i.EventAdministration.Event.ID, new { @id = "autocomplete_input_id_9" })
                        @Html.HiddenFor(i => i.EventAdministration.AdministrationType, new { @id = "pusar" })
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Дата початку</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.EventDateStart" class="border TextIinput form-control infoInput"
                               placeholder="Виберіть...">
                        <span class="ui-datepicker"></span>
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Дата завершення</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.EventDateEnd" class="border TextIinput form-control infoInput"
                               placeholder="Виберіть...">
                        <span class="ui-datepicker"></span>
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Форма проведення</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.FormOfHolding" type="text" class="border TextIinput infoInput">
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Локація</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.Eventlocation" type="text" class="border TextIinput infoInput">
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Призначений для</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.ForWhom" type="text" class="border TextIinput infoInput">
                    </div>
                </div>
                <div class="row border shadow">
                    <div class="col text-center d-xl-flex justify-content-xl-center">
                        <label class="col-form-label">Приблизна кількість учасників</label>
                    </div>
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <input asp-for="Event.NumberOfPartisipants" type="text" class="border TextIinput infoInput">
                    </div>
                </div>
                <div class="row border shadow" style="height: 123px;">
                    <div class="col">
                        <div class="row">
                            <div class="col text-center">
                                <div class="d-xl-flex justify-content-xl-center align-items-xl-end" style="height: 38px;">
                                    <div class="col text-left d-xl-flex justify-content-xl-center align-items-xl-center">
                                        <label class="col-form-label">Питання/побажання до булави&nbsp; &nbsp;</label>
                                    </div>
                                    <div class="col">
                                        <div></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="d-xl-flex justify-content-xl-center align-items-xl-center" style="height: 76px;">
                                    <input asp-for="Event.Questions" type="text" class="border TextIinput bigInput">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row border shadow" style="height: 123px;">
                    <div class="col">
                        <div class="row">
                            <div class="col text-center">
                                <div class="d-xl-flex justify-content-xl-center align-items-xl-end" style="height: 38px;">
                                    <div class="col text-left d-xl-flex justify-content-xl-center align-items-xl-center">
                                        <label class="col-form-label">Які впрваджено зміни/додаки ?</label>
                                    </div>
                                    <div class="col">
                                        <div></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="d-xl-flex justify-content-xl-center align-items-xl-center" style="height: 76px;">
                                    <input asp-for="Event.Description" type="text" class="border TextIinput bigInput">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <button class="btn btn-primary submitButton" type="submit">Створити подію</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>