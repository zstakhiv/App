@using EPlast.DataAccess.Repositories
@using EPlast.DataAccess.Entities
@model EPlast.ViewModels.ClubViewModel
<form class="container bg-light m-5 pt-2 pb-5 pr-5 pl-5 club-wrappers-radius" style="background-color:white" asp-action="EditConfirmed" enctype="multipart/form-data">
    <div class="row">
        <div class="col-7">
            <h1>Створити курінь</h1>
            @Html.HiddenFor(model => model.Club.ID)
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назва куреня:</label>
                <input asp-for="Club.ClubName" id="clubName-clubAdmins" class="form-control">
                <span asp-validation-for="Club.ClubName" id="clubName-clubAdmins-mistake" class="text-danger" style="display: none;">Назва куреня не має бути порожньою.</span>
                <span asp-validation-for="Club.ClubName" id="clubName-clubAdmins-mistake2" class="text-danger" style="display: none;">Назва куреня не має перевищувати 50 символів.</span>
            </div>

            <div class="form-group">
                <label class="control-label">Web-сторінка:</label>
                <input asp-for="Club.ClubURL" class="form-control">
                <span asp-validation-for="Club.ClubURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Опис куреню:</label>
                <textarea asp-for="Club.Description" id="clubDescription-clubAdmins" class="form-control" style="min-height: 200px;"> </textarea>
                <span asp-validation-for="Club.Description" id="clubDescription-clubAdmins-mistake" class="text-danger" style="display: none;">Опис куреню не має перевищувати 1024 символи.</span>
            </div>
            <button type="submit" value="Save" id="save-editedClub" class="btn " style="background-color:#3c5438; color:white;">Підтвердити</button>
        </div>
        <div class="col ">
            <div class="portlet light profile-sidebar-portlet bordered">
                <div class="profile-userpic">
                    <img src="/images/Club/default.png" class="img-thumbnail" alt="">
                </div>
            </div>
            <div class="row rowEditPage">
                <div id="photo-wrapper" class="photo-wrapper">
                    <div class="Upload-photo">
                        <button id="upload-btn" class="upload-btn">Вибрати...</button>
                        <input type="file" class="custom-file-input" id="upload-file-clubAdmins" accept=".jpg,.jpeg,.png" name="file" onchange="document.getElementById('img').src = window.URL.createObjectURL(this.files[0])">
                    </div>
                    <div class="accept">
                        <button value="Save" id="Upload-photo-clubAdmin" class="btn " style="background-color:#3c5438; color:white;">Підтвердити</button>
                    </div>
                </div>
            </div>
        </div>


</form>