@using EPlast.ViewModels
@model ClubViewModel
@{
    ViewData["Title"] = "ClubAdmins";
}
    <div class="container content-wrapper" style="margin-left:-2px;">
        <div class="data-table-wrapper-club club-wrappers-radius data-table-wrapper">
            <h1 class="grid-header">Адміністрація куреня - "@Model.Club.ClubName"</h1>
            <table id="dtClubAdmins" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">
                            Посада
                        </th>
                        <th class="th-sm">
                            ПІБ
                        </th>

                        <th class="th-sm">
                            Час вступу на посаду
                        </th>
                        <th class="th-sm">
                            Час завершення терміну
                        </th>
                        @if (Model.ClubAdmin != null && (ViewBag.usermanager.GetUserId(User) == Model.ClubAdmin.Id || User.IsInRole("Admin")))
                        {
                            <th>
                                Вибрати дату завершення каденції
                            </th>
                            <th>
                                Видалити з списку
                            </th>
                        }
                        </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Club.ClubAdministration)
                    {
                    <tr class="raport-click-row">
                        <td>@item.AdminType.AdminTypeName</td>
                        <td>
                            <a asp-action="UserProfile" asp-controller="Account" asp-route-userId="@item.ClubMembers.User.Id" style="color:black">
                                @item.ClubMembers.User.LastName @item.ClubMembers.User.FirstName @(item.ClubMembers.User.FatherName ?? "")
                            </a>
                        </td>
                        <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                        @if (@item.EndDate.HasValue)
                        {
                            <td>@item.EndDate.Value.ToString("dd-MM-yyyy")</td>
                            @if (Model.ClubAdmin != null && (ViewBag.usermanager.GetUserId(User) == Model.ClubAdmin.Id || User.IsInRole("Admin")))
                            {
                                <td>-</td>
                            }
                        }
                        else
                        {
                            <td>-</td>
                            @if (Model.ClubAdmin != null && (ViewBag.usermanager.GetUserId(User) == Model.ClubAdmin.Id || User.IsInRole("Admin")))
                            {
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input asp-for="@item.EndDate" id="datepickerBirthday" class="form-control" placeholder="Виберіть..." asp-controller="Club" asp-action="SetEndDateFromAdmins" asp-route-enddate="@item.EndDate" asp-route-adminId="@item.ID" asp-route-clubIndex="@item.Club.ID">
                                        <span class="ui-datepicker" asp-controller="Club" asp-action="SetEndDateFromAdmins" asp-route-enddate="@item.EndDate" asp-route-adminId="@item.ID" asp-route-clubIndex="@item.Club.ID"></span>
                                        <a asp-controller="Club" asp-action="SetEndDateFromAdmins" asp-route-enddate="@item.EndDate" asp-route-adminId="@item.ID" asp-route-clubIndex="@item.Club.ID" style="color: #3c5438;"><i class="material-icons">delete</i></a>

                                    </div>  
                                </div>
                                <td class="form-group">
                                    <a class="modal-footer" data-dismiss="modal" style="color: #3c5438;"><i class="material-icons">clock</i></a>
                                </td>
                            }
                        }
                        @if (Model.ClubAdmin != null && (ViewBag.usermanager.GetUserId(User) == Model.ClubAdmin.Id || User.IsInRole("Admin")))
                        {
                            <td>
                                <a asp-controller="Club" asp-action="DeleteFromAdmins" asp-route-adminId="@item.ID" asp-route-clubIndex="@item.Club.ID" style="color: #3c5438;"><i class="material-icons">delete</i></a>
                            </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Club" asp-action="Club" asp-route-index="@Model.Club.ID" class="btn btn-primary btn-lg colors-for-club-buttons" role="button">Назад</a>
        </div>
    </div>