@using EPlast.DataAccess.Entities
@model EPlast.ViewModels.RegionsAdmins

<div class="container">
    <div class="data-table-wrapper regionsAdmins">
       <h3 class="text-center">Осередки та адміністрація</h3>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.City,
                    new {@placeholder="Виберіть станицю...", @list = "CityType-value", @id = "regionsAndAdmins", @class = "form-control", @Value = "" })
                    <datalist id="CityType-value">
                        @foreach (City item in Model.Cities)
                        {
                            <option data-value="@item.ID" value="@item.Name"></option>
                        }
                    </datalist>
                </div>
       
            <div id="getAdmins"></div>
    </div>
</div>
