@using EPlast.ViewModels;
@model RegisterViewModel

<div class="changeWrapper">
    <div class="login-clean">
        <div class="form">
            <div class="login-register-switcher">
                <div class="login-rectangle">
                    <div class="switcher-text register-active">
                        <a class="login-text" asp-action="Login" asp-controller="Account">Увійти</a>
                        <a class="register-text">Зареєструватись</a>
                        <div class="active-rectangle"></div>
                    </div>
                </div>
                <div class="circle-wrapper">
                    <div class="login-circle">
                        <p>АБО</p>
                    </div>
                </div>
            </div>
            <form method="post" class="register-form" asp-action="Register" asp-controller="Account">
                <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input asp-for="@Model.Email" class="form-control" type="email" name="Email"
                           placeholder="Електронна пошта">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Password" class="form-control" type="password" name="Password"
                           placeholder="Пароль">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" name="ConfirmPassword"
                           placeholder="Повторіть пароль">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Name" class="form-control" type="text" name="Name" placeholder="Ім'я">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.SurName" class="form-control" type="text" name="SurName" placeholder="Прізвище">
                    <span asp-validation-for="@Model.SurName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-block text-light" type="submit">
                        Зареєструватись
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
