@using EPlast.ViewModels;
@model ForgotPasswordViewModel
    <div class="main-wrapper" style="background-color: rgb(245,245,245);">
        <div class="login-clean" style="background-color: rgb(245, 245, 245);">
            <div class="form">
                <div class="forgot-password-container d-flex">
                    <div class="inner justify-content-center">
                        <p>Забули пароль?     Введіть електронну пошту</p>
                    </div>
                </div>
                <form method="post" class="login-form" asp-action="ForgotPassword" asp-controller="Account" style="margin-top:25px;">
                    <div class="validation" asp-validation-summary="ModelOnly" style="color:#db0b3c;"></div>
                    <div class="form-group">
                        <input asp-for="@Model.Email" class="form-control" type="email" name="Email"
                               placeholder="Електронна пошта" />
                        <span asp-validation-for="@Model.Email" style="color:#db0b3c;" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block text-light" type="submit"
                                style="background-color: #3c5438">
                            Надіслати
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
