@using EPlast.ViewModels;
@model ResetPasswordViewModel

<div class="main-wrapper" style="background-color: rgb(245,245,245);">
    <div class="login-clean" style="background-color: rgb(245, 245, 245);">
        <div class="form">
            <div class="forgot-password-container d-flex">
                <div class="inner justify-content-center">
                    <p class="">Скидування пароля.   Введіть електронну пошту</p>
                </div>
            </div>
            <form method="post" class="login-form" asp-action="ResetPassword" asp-controller="Account">
                <div class="validation text-danger" asp-validation-summary="ModelOnly" style="color:#db0b3c;"></div>
                <input asp-for="@Model.Code" type="hidden"/>
                <div class="form-group">
                    <input asp-for="@Model.Email" class="form-control" type="email" name="Email"
                           placeholder="Електронна пошта" style="margin-top:15px;" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Password" class="form-control" type="password" name="Password"
                           placeholder="Новий пароль" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" name="ConfirmPassword"
                           placeholder="Введіть новий пароль ще раз" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-block text-light" type="submit"
                            style="background-color: #3c5438">
                        Скинути
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

