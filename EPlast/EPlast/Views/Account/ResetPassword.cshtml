@using EPlast.ViewModels;
@model ResetPasswordViewModel

<div class="changeWrapper">
    <div class="login-clean">
        <div class="form">
            <div class="forgot-password-container reset d-flex">
                <div class="inner justify-content-center">
                    <p>Скидування пароля.   Введіть електронну пошту</p>
                </div>
            </div>
            <form method="post" class="login-form" asp-action="ResetPassword" asp-controller="Account">
                <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                <input asp-for="@Model.Code" type="hidden"/>
                <div class="form-group">
                    <input asp-for="@Model.Email" class="form-control resetp-email" type="email" name="Email"
                           placeholder="Електронна пошта"/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Password" class="form-control" type="password" name="Password"
                           placeholder="Новий пароль"/>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" name="ConfirmPassword"
                           placeholder="Введіть новий пароль ще раз"/>
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-block text-light" type="submit">
                        Скинути
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

