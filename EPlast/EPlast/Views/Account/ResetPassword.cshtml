@using EPlast.ViewModels;
@model ResetPasswordViewModel;



<body style="background-color: rgb(245, 245, 245);">
    <div class="login-clean" style="background-color: rgb(245, 245, 245);">
        <div class="form">
            <div class="forgot-password-container d-flex">
                <p class="">Скидування пароля</p>
                <p class=" ml-2">Введіть електронну пошту</p>
            </div>
            <form method="post" class="login-form" asp-action="ResetPassword" asp-controller="Account">
                <div class="validation" asp-validation-summary="All" style="font-size:20px;"></div>
                <h2 class="sr-only">ForgotPassword Form</h2>
                <div class="illustration"><i class="icon ion-ios-navigate" style="color: #3c5438;"></i></div>
                <input asp-for="Code" type="hidden" />
                <div class="form-group">
                    <input asp-for="Email" class="form-control" type="email" name="Email"
                           placeholder="Електронна пошта" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" name="Password"
                           placeholder="Новий пароль" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" name="ConfirmPassword"
                           placeholder="Повторіть ще раз новий пароль" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <button class="btn btn-block text-light" type="submit"
                            style="background-color: #3c5438">
                        Скинути
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
