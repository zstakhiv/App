@using EPlast.ViewModels;
@model ChangePasswordViewModel


<div class="main-wrapper" style="background-color: rgb(245,245,245); width:100%">
    <div class="login-clean" style="background-color: rgb(245, 245, 245);">
        <div class="form">
            <div class="forgot-password-container d-flex">
                <div class="inner justify-content-center">
                    <p>Зміна пароля</p>
                </div>
            </div>
            <form method="post" class="login-form" asp-action="ChangePassword" asp-controller="Account" style="margin-top:25px;">
                <div class="validation" asp-validation-summary="ModelOnly" style="color:#db0b3c;"></div>
                <div class="form-group">
                    <input asp-for="@Model.CurrentPassword" class="form-control" type="password" name="currentpassword"
                           placeholder="Поточний пароль" />
                    <span asp-validation-for="@Model.CurrentPassword" style="color:#db0b3c;" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.NewPassword" class="form-control" type="password" name="newpassword"
                           placeholder="Новий пароль" />
                    <span asp-validation-for="@Model.NewPassword" style="color:#db0b3c;" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" name="confirmpassword"
                           placeholder="Введіть новий пароль ще раз" />
                    <span asp-validation-for="@Model.ConfirmPassword" style="color:#db0b3c;" />
                </div>
                <div class="form-group">
                    <button class="btn btn-block text-light" type="submit"
                            style="background-color: #3c5438">
                        Змінити
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
