@model EPlast.Models.UserViewModel

<form asp-action="EditConfirmed" enctype="multipart/form-data">
    <div class="row">
        <div class="col-7">
            <form class="container bg-light m-5 pt-2 pb-5 pr-5 pl-5" style="background-color:white">
                <h1>Редагування профілю</h1>
                @Html.HiddenFor(model => model.User.Id)
                @Html.HiddenFor(model => model.User.UserProfile.ID)
                @Html.HiddenFor(model => model.User.UserProfile.UserID)
                @Html.HiddenFor(model => model.User.UserProfile.User)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Ім'я</label>
                    <input asp-for="User.FirstName" class="form-control">
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Прізвище</label>
                    <input asp-for="User.LastName" class="form-control">
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">По-батькові</label>
                    <input asp-for="User.FatherName" class="form-control">
                    <span asp-validation-for="User.FatherName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Національність</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Nationality.Name,
                    new { @placeholder = Model.User.UserProfile.Nationality.Name, @list = "NationalityType-value", @class = "form-control", @Value = "" })
                    <datalist id="NationalityType-value">
                        @foreach (Nationality item in ViewBag.nationalities)
                        {
                            <option>@item.Name</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Номер телефону</label>
                    <input asp-for="User.UserProfile.PhoneNumber" class="form-control" />
                    <span asp-validation-for="User.UserProfile.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Віровизнання</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Religion.Name,
                    new { @placeholder = Model.User.UserProfile.Religion.Name, @list = "ReligionType-value", @class = "form-control", @Value = "" })
                    <datalist id="ReligionType-value">
                        @foreach (Religion item in ViewBag.religions)
                        {
                            <option>@item.Name</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Дата народження</label>
                    <input asp-for="User.UserProfile.DateTime" class="form-control" />
                    <span asp-validation-for="User.UserProfile.DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Місце навчання</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Education.PlaceOfStudy,
                    new { @placeholder = Model.User.UserProfile.Education.PlaceOfStudy, @list = "EducationPlaceType-value", @class = "form-control", @Value = "" })
                    <datalist id="EducationPlaceType-value">
                        @foreach (Education item in ViewBag.educations)
                        {
                            <option>@item.PlaceOfStudy</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Спеціальність</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Education.Speciality,
                    new { @placeholder = Model.User.UserProfile.Education.Speciality, @list = "EducationSpecType-value", @class = "form-control", @Value = "" })
                    <datalist id="EducationSpecType-value">
                        @foreach (Education item in ViewBag.educations)
                        {
                            <option>@item.Speciality</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Ступінь</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Education.Degree.Name,
                     new { @placeholder = Model.User.UserProfile.Education.Degree.Name, @list = "DegreeType-value", @class = "form-control", @Value = "" })
                    <datalist id="DegreeType-value">
                        @foreach (Degree item in ViewBag.degrees)
                        {
                            <option>@item.Name</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Стать</label>
                    @Html.DropDownListFor(x => x.User.UserProfile.Gender.ID, (IEnumerable<SelectListItem>)ViewBag.genders, new { @placeholder = "Стать", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Місце проживання</label>
                    <input asp-for="User.UserProfile.Address" class="form-control" />
                    <span asp-validation-for="User.UserProfile.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Місце праці</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Work.PlaceOfwork,
                     new { @placeholder = Model.User.UserProfile.Work.PlaceOfwork, @list = "WorkPlaceType-value", @class = "form-control", @Value = "" })
                    <datalist id="WorkPlaceType-value">
                        @foreach (Work item in ViewBag.works)
                        {
                            <option>@item.PlaceOfwork</option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label class="control-label">Посада</label>
                    @Html.TextBoxFor(x => x.User.UserProfile.Work.Position,
                     new { @placeholder = Model.User.UserProfile.Work.Position, @list = "WorkPositionType-value", @class = "form-control", @Value = "" })
                    <datalist id="WorkPositionType-value">
                        @foreach (Work item in ViewBag.works)
                        {
                            <option>@item.Position</option>
                        }
                    </datalist>
                </div>
                <button type="submit" value="Save" class="btn " style="background-color:#3c5438; color:white;">Підтвердити</button>
            </form>
        </div>
        <div class="col ">
            <div class="row">
                <div class="col ">

                </div>
                <div class="col">
                    <form class="bg-light m-5 pt-2 pb-5 pr-5 pl-5">
                        <img class="rounded-circle" style="width:200px;height:200px;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcS7HBrTji1jiZda9gKgUjIAk7WhVhpSGelEVnZFqXrEAHg2-qAg">
                        <div class="custom-file mt-3" id="customFile">
                            <input type="file" class="custom-file-input" id="file" name="file" value="dvas" aria-describedby="fileHelp" onchange="readURL(this, 'selectedImg')">
                            <label class="custom-file-label" for="file">
                                Вибрати фото...
                            </label>
                        </div>
                    </form>
                </div>
                <div class="col">

                </div>
            </div>

        </div>
    </div>

</form>