@using EPlast.ViewModels
@using EPlast.BussinessLayer.ExtensionMethods
@using EPlast.Controllers
@model Tuple<DecesionViewModel, List<DecesionViewModel>>
@{
    ViewData["Title"] = "Читання рішень";

}
    <div class="container">
        <button  class="btn btn-sm btn-primary" data-toggle="modal" data-target="#CreateDecesionModal">Додати</button>

        <div class="data-table-wrapper">
            <table id="dtReadRaport" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">
                            ID
                        </th>
                        <th class="th-sm">
                            Керівний орган
                        </th>
                        <th class="th-sm">
                            Статус
                        </th>
                        <th class="th-sm">
                            Рішення для
                        </th>
                        <th class="th-sm">
                            Рішення
                        </th>
                        <th class="th-sm">
                            Дата
                        </th>
                        <th class="th-sm">
                            Додатки
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item2)
                    {
                        <tr class="raport-click-row">
                            <td>@item.Decesion.ID</td>
                            <td>@item.Decesion.Organization.OrganizationName</td>
                            <td>@item.Decesion.DecesionStatusType.GetDescription()</td>
                            <td>@item.Decesion.DecesionTarget.TargetName</td>
                            <td>@item.Decesion.Description</td>
                            <td>@item.Decesion.Date.ToString("dd-MM-yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Filename))
                                {
                                    <a asp-controller="Documentation" asp-action="Download" asp-route-id="@item.Decesion.ID" asp-route-filename="@item.Filename">@item.Filename</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

<div id="CreateDecesionModal" role="dialog" tabindex="-1" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @(await Html.PartialAsync("~/Views/Documentation/_CreateDecesion.cshtml", Model.Item1))
        </div>
    </div>
</div>