@model EPlast.ViewModels.AnnualReportViewModel
@{
    ViewData["Title"] = "Річний звіт станиці";
}

<div class="annual-report-form m-5 shadow-lg">
    <form asp-action="CreateAnnualReport" asp-controller="Report">
        <h1 class="text-center">Річний звіт станиці @Model.CityName</h1>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h4>Голова новообраної Старшини</h4>
                        <select asp-for="CityAdministration.UserId" asp-items="Model.CityMembers" , class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h4>Правовий статус осередку</h4>
                        <select asp-for="CityLegalStatus.LegalStatusType" asp-items="Model.CityLegalStatusTypes" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h3>УПП</h3>
                        <div class="form-row">
                            <div class="col align-self-end">
                                <label>Кількість гніздечок пташат</label>
                                <input asp-for="AnnualReport.NumberOfSeatsPtashat" class="form-control" type="number" min="0" />
                            </div>
                            <div class="col align-self-end">
                                <label>Кількість пташат</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfPtashata" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h3>УПН</h3>
                        <div class="form-row">
                            <div class="col align-self-end">
                                <label>Кількість самостійних роїв</label>
                                <input asp-for="AnnualReport.NumberOfIndependentRiy" class="form-control" type="number" min="0" />
                            </div>
                            <div class="col align-self-end">
                                <label>Кількість новацтва</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfNovatstva" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group p-3 m-2 border shadow-sm">
            <h3>УПЮ</h3>
            <div class="form-row">
                <div class="col align-self-end">
                    <label>Кількість куренів у станиці/паланці (окрузі/регіоні)</label>
                    <input asp-for="AnnualReport.NumberOfClubs" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість самостійних гуртків</label>
                    <input asp-for="AnnualReport.NumberOfIndependentGroups" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість неіменованих разом</label>
                    <input asp-for="AnnualReport.MembersStatistic.NumberOfUnatstvaNoname" class="form-control" type="number" min="0" />
                </div>
            </div>
            <div class="form-row">
                <div class="col align-self-end">
                    <label>Кількість прихильників/ць</label>
                    <input asp-for="AnnualReport.MembersStatistic.NumberOfUnatstvaSupporters" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість учасників/ць</label>
                    <input asp-for="AnnualReport.MembersStatistic.NumberOfUnatstvaMembers" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість розвідувачів</label>
                    <input asp-for="AnnualReport.MembersStatistic.NumberOfUnatstvaProspectors" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість скобів/вірлиць</label>
                    <input asp-for="AnnualReport.MembersStatistic.NumberOfUnatstvaSkobVirlyts" class="form-control" type="number" min="0" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h3>УСП</h3>
                        <div class="form-row">
                            <div class="col align-self-end">
                                <label>Кількість старших пластунів прихильників</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfSeniorPlastynSupporters" class="form-control" type="number" min="0" />
                            </div>
                            <div class="col align-self-end">
                                <label>Кількість старших пластунів</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfSeniorPlastynMembers" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group p-3 m-2 border shadow-sm">
                        <h3>УПС</h3>
                        <div class="form-row">
                            <div class="col align-self-end">
                                <label>Кількість сеньйорів пластунів прихильників</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfSeigneurSupporters" class="form-control" type="number" min="0" />
                            </div>
                            <div class="col align-self-end">
                                <label>Кількість сеньйорів пластунів</label>
                                <input asp-for="AnnualReport.MembersStatistic.NumberOfSeigneurMembers" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group p-3 m-2 border shadow-sm">
            <h3>Адміністрування та виховництво</h3>
            <div class="form-row">
                <div class="col align-self-end">
                    <label>Кількість діючих виховників (з усіх членів УСП, УПС)</label>
                    <input asp-for="AnnualReport.NumberOfTeachers" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість адміністраторів (в проводах будь якого рівня)</label>
                    <input asp-for="AnnualReport.NumberOfAdministrators" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість тих, хто поєднує виховництво та адміністрування</label>
                    <input asp-for="AnnualReport.NumberOfTeacherAdministrators" class="form-control" type="number" min="0" />
                </div>
            </div>
        </div>
        <div class="form-group p-3 m-2 border shadow-sm">
            <div class="form-row">
                <div class="col align-self-end">
                    <label>Кількість пільговиків</label>
                    <input asp-for="AnnualReport.NumberOfBeneficiaries" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість членів Пластприяту</label>
                    <input asp-for="AnnualReport.NumberOfPlastpryiatMembers" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Кількість почесних членів</label>
                    <input asp-for="AnnualReport.NumberOfHonoraryMembers" class="form-control" type="number" min="0" />
                </div>
            </div>
        </div>
        <div class="form-group p-3 m-2 border shadow-sm">
            <h3>Залучені кошти</h3>
            <div class="form-row">
                <div class="col align-self-end">
                    <label>Державні кошти</label>
                    <input asp-for="AnnualReport.PublicFunds" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Внески</label>
                    <input asp-for="AnnualReport.ContributionFunds" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Пластовий заробіток</label>
                    <input asp-for="AnnualReport.PlastSalary" class="form-control" type="number" min="0" />
                </div>
                <div class="col align-self-end">
                    <label>Спонсорські кошти</label>
                    <input asp-for="AnnualReport.SponsorshipFunds" class="form-control" type="number" min="0" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row p-3 m-2 border shadow-sm">
                <div class="col align-self-end">
                    <label>Вкажіть, що вам допоможе ефективніше залучати волонтерів та створювати виховні частини (гнізда, курені)</label>
                    <textarea asp-for="AnnualReport.ImprovementNeeds" class="form-control textarea-fixed" />
                </div>
                <div class="col align-self-end">
                    <label>Вкажіть перелік майна, що є в станиці</label>
                    <textarea asp-for="AnnualReport.ListProperty" class="form-control textarea-fixed" />
                </div>
            </div>
        </div>
        <div class="form-group text-center p-3">
            <button class="btn btn-lg btn-success">Створити</button>
        </div>
    </form>
</div>