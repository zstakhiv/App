@model EPlast.ViewModels.ViewAnnualReportsViewModel
@using EPlast.BussinessLayer.ExtensionMethods
@{
    ViewData["Title"] = "Річні звіти";
}

<div class="container-fluid m-3">
    <form class="annualReports-wrapper">
        <h1 class="text-center">Річні звіти станиць</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-4">
                        <button id="addAnnualReport" class="btn btn-sm btn-block text-light">Додати</button>
                    </div>
                    <div class="col-4">
                        <button id="reviewAnnualReport" class="btn btn-sm btn-block text-light disabled" disabled>Переглянути</button>
                    </div>
                    <div class="col-4">
                        <button id="editAnnualReport" class="btn btn-sm btn-block text-light disabled" disabled>Редагувати</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-4">
                        <button id="confirmAnnualReport" class="btn btn-sm btn-block text-light disabled" disabled>Підтвердити</button>
                    </div>
                    <div class="col-4">
                        <button id="deleteAnnualReport" class="btn btn-sm btn-block text-light disabled" disabled>Видалити</button>
                    </div>
                    <div class="col-4">
                        <button id="cancelAnnualReport" class="btn btn-sm btn-block text-light disabled" disabled>Скасувати</button>
                    </div>
                </div>
            </div>
        </div>
        <table id="AnnualReportsTable" class="table table-hover table-responsive-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th hidden></th>
                    <th hidden></th>
                    <th>Станиця</th>
                    <th>Регіон</th>
                    <th>Подавач</th>
                    <th>Дата</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var annualReport in Model.AnnualReports)
                {
                    <tr>
                        <td hidden>@annualReport.ID</td>
                        <td hidden>@annualReport.CityId</td>
                        <td>@annualReport.City.Name</td>
                        <td>@annualReport.City.Region.RegionName</td>
                        <td>@annualReport.User.FirstName @annualReport.User.LastName</td>
                        <td>@annualReport.Date.ToString("dd-MM-yyyy")</td>
                        <td>@annualReport.Status.GetDescription()</td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="ModalContent">

        </div>
        <div class="modal modal-success" id="ModalAddAnnualReport">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="m-2 text-center">
                            <h5 class="text-center m-2">Оберіть станицю для створення річного звіту</h5>
                        </div>
                        <div class="d-flex justify-content-center m-2">
                            <select id="CitiesList" asp-items="Model.Cities" class="form-control m-2"></select>
                        </div>
                        <div class="d-flex justify-content-center m-2">
                            <button id="CreateAnnualReportLikeAdmin" type="button" class="btn btn-block text-light m-2">Створити звіт</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-block text-light" data-dismiss="modal">Закрити</button>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_SuccessModal" model='""' />
        <partial name="_ErrorModal" model='""' />
        <partial name="_YesNoModal" />
    </form>
</div>